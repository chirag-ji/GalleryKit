<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GalleryKitView">
        <!--This will be used when in combine mode-->
        <attr name="combinedMaxSelections" format="integer" />
        <!--This will be used when in separate/imageOnly mode-->
        <attr name="maxImageSelections" format="integer" />
        <!--This will be used when in separate/videoOnly mode-->
        <attr name="maxVideoSelections" format="integer" />
        <!--If this is enabled, A bar will be shown with selected gallery resources| default is enabled-->
        <attr name="showSelectedResources" format="boolean" />
        <!--Configurable back button image-->
        <attr name="backButtonImageSrc" format="color|reference" />
        <!--Weather to hide back button or not | default false-->
        <attr name="hideBackButton" format="boolean" />
        <!--Describes the viewing style-->
        <attr name="viewStyle" format="enum">
            <enum name="combined" value="0" />
            <enum name="separate" value="1" />
            <enum name="imageOnly" value="2" />
            <enum name="videoOnly" value="3" />
        </attr>
        <!--Define a custom background for Done button-->
        <attr name="doneButtonColor" format="reference|color" />
    </declare-styleable>
</resources>