<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedItemsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="18sp"
        app:fastScrollEnabled="true"
        app:fastScrollHorizontalThumbDrawable="@drawable/bg_thumb_drawable"
        app:fastScrollHorizontalTrackDrawable="@drawable/bg_line_drawable"
        app:fastScrollVerticalThumbDrawable="@drawable/bg_thumb_drawable"
        app:fastScrollVerticalTrackDrawable="@drawable/bg_line_drawable" />
</androidx.appcompat.widget.LinearLayoutCompat>